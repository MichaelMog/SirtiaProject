<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.effect.SepiaTone?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="557.0" prefWidth="679.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.ExploreMoviesController">
    <top>
        <HBox BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" top="10.0"/>
            </BorderPane.margin>
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#back" text="Back">
                    <HBox.margin>
                        <Insets left="15.0"/>
                    </HBox.margin>
                </Button>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="97.0" text="הסרטייה"
                       textAlignment="CENTER" textFill="#4d446f" underline="true">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="240.0"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
    </top>
    <left>
        <ScrollPane prefHeight="532.0" prefWidth="423.0" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="movieList"/>
            </content>
        </ScrollPane>
    </left>
    <right>
        <GridPane alignment="CENTER" prefHeight="532.0" prefWidth="231.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="34.0" minHeight="10.0" percentHeight="10.0" prefHeight="34.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="57.0" minHeight="0.0" percentHeight="5.0" prefHeight="19.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="113.0" minHeight="0.0" percentHeight="5.0" prefHeight="17.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="161.0" minHeight="0.0" percentHeight="5.0" prefHeight="19.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="223.0" minHeight="0.0" percentHeight="5.0" prefHeight="34.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="223.0" minHeight="10.0" percentHeight="5.0" prefHeight="24.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="223.0" minHeight="10.0" percentHeight="5.0" prefHeight="27.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="243.0" minHeight="1.0" percentHeight="20.0" prefHeight="42.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="264.0" minHeight="0.0" percentHeight="5.0" prefHeight="175.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="264.0" minHeight="10.0" percentHeight="10.0" prefHeight="175.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="30.0" minHeight="0.0" percentHeight="30.0" prefHeight="0.0" valignment="TOP"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button id="movieBtn" fx:id="searchButton" alignment="CENTER" contentDisplay="CENTER"
                        mnemonicParsing="false" onAction="#showMovies" prefHeight="25.0" prefWidth="100.0" text="Search"
                        textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                        GridPane.rowIndex="10">
                    <cursor>
                        <Cursor fx:constant="DEFAULT"/>
                    </cursor>
                    <effect>
                        <SepiaTone level="0.11"/>
                    </effect>
                    <GridPane.margin>
                        <Insets top="20.0"/>
                    </GridPane.margin>
                </Button>
                <CheckBox mnemonicParsing="false" text="Adventure" GridPane.rowIndex="1"/>
                <CheckBox mnemonicParsing="false" text="Comedy" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <CheckBox mnemonicParsing="false" text="Documentary" GridPane.rowIndex="5"/>
                <CheckBox mnemonicParsing="false" text="Action" GridPane.rowIndex="2"/>
                <CheckBox mnemonicParsing="false" text="Romance" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <CheckBox mnemonicParsing="false" text="Horror" GridPane.rowIndex="6"/>
                <CheckBox mnemonicParsing="false" text="Drama" GridPane.rowIndex="3"/>
                <CheckBox mnemonicParsing="false" text="Thriller" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <CheckBox mnemonicParsing="false" text="Sci-fi" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <Label alignment="CENTER" text="Genres" underline="true" GridPane.columnSpan="2"
                       GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
                    <padding>
                        <Insets bottom="6.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <CheckBox mnemonicParsing="false" text="Fantasy" GridPane.rowIndex="4"/>
                <CheckBox mnemonicParsing="false" text="Musical" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <CheckBox mnemonicParsing="false" text="Animation" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label alignment="BOTTOM_CENTER" text="Movie Type" underline="true" GridPane.columnSpan="2"
                       GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="BOTTOM">
                    <padding>
                        <Insets bottom="12.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <CheckBox mnemonicParsing="false" text="Coming Soon" GridPane.rowIndex="8"/>
                <CheckBox mnemonicParsing="false" text="Watch at Home" GridPane.rowIndex="9"/>
                <CheckBox fx:id="theaterCheckbox" mnemonicParsing="false" onAction="#flipBranchDateButtonVisibility"
                          text="In Theaters" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                <Button fx:id="branchDateButton" mnemonicParsing="false" onAction="#showBranchDateAlert"
                        text="Branch &amp; Date" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                        GridPane.rowIndex="9" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="4.0"/>
                    </GridPane.margin>
                </Button>
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearSelection" text="Clear Selection"
                        GridPane.halignment="CENTER" GridPane.rowIndex="10">
                    <GridPane.margin>
                        <Insets top="20.0"/>
                    </GridPane.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </GridPane>
    </right>
</BorderPane>
